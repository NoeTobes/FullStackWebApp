// Get system statistics
function getSystemStats() {
    const totalUsers = window.db.accounts.length;
    const activeEmployees = window.db.employees.filter(e => e.status === 'active').length;
    const departments = window.db.departments.length;
    const pendingRequests = window.db.requests.filter(r => r.status === REQUEST_STATUS.PENDING).length;
    const totalRecords = window.db.accounts.length + window.db.departments.length + 
                        window.db.employees.length + window.db.requests.length;
    
    return {
        totalUsers,
        activeEmployees,
        departments,
        pendingRequests,
        totalRecords
    };
}

// Get last saved time
function getLastSavedTime() {
    const stored = localStorage.getItem(STORAGE_KEY);
    if (stored) {
        try {
            const data = JSON.parse(stored);
            if (data._metadata?.lastSaved) {
                return new Date(data._metadata.lastSaved).toLocaleString();
            }
        } catch (e) {}
    }
    return 'Never';
}

// Get storage size
function getStorageSize() {
    const stored = localStorage.getItem(STORAGE_KEY);
    if (stored) {
        const size = new Blob([stored]).size;
        return formatBytes(size);
    }
    return '0 Bytes';
}

// Run test scenarios
function runTest(testName) {
    switch(testName) {
        case 'register':
            showNotification('Test: Navigate to Register page and create a new account', 'info');
            navigateTo('/register');
            break;
        case 'login':
            showNotification('Test: Try logging in with admin@example.com / Password123!', 'info');
            navigateTo('/login');
            break;
        case 'profile':
            if (isAuthenticated()) {
                showNotification('Test: Check your profile information and try editing', 'info');
                navigateTo('/profile');
            } else {
                showNotification('Please login first to test profile', 'warning');
                navigateTo('/login');
            }
            break;
        case 'request':
            if (isAuthenticated()) {
                showNotification('Test: Create a new request with multiple items', 'info');
                navigateTo('/requests');
                setTimeout(() => showNewRequestModal(), 500);
            } else {
                showNotification('Please login first to test requests', 'warning');
                navigateTo('/login');
            }
            break;
        case 'admin':
            if (isAdmin()) {
                showNotification('Test: Try managing accounts, departments, and employees', 'info');
                navigateTo('/accounts');
            } else {
                showNotification('Please login as admin first (admin@example.com)', 'warning');
                navigateTo('/login');
            }
            break;
        case 'persistence':
            showNotification('Test: Data persists across refreshes. Try refreshing the page!', 'info');
            break;
    }
}

