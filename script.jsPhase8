        case 'employees-page':
            renderEmployeesPage();
            break;
        case 'departments-page':
            renderDepartmentsPage();
            break;
        case 'accounts-page':
            renderAccountsPage();
            break;
        case 'requests-page':
            renderRequestsPage();
            break;
        case 'verify-email-page':
            renderVerifyEmailPage();
            break;
        case 'home-page':
            renderHomePage();
            break;
    }
}

